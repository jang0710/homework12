<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textItem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="@dimen/list_item_padding"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/list_item_text_size1"
        app:layout_constraintEnd_toStartOf="@+id/contactItem2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textItem4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:padding="@dimen/list_item_padding"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/list_item_text_size2"
        app:layout_constraintTop_toBottomOf="@+id/textItem3"
        app:layout_constraintEnd_toStartOf="@+id/contactItem2" />

    <ImageView
        android:id="@+id/contactItem2"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_0"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>